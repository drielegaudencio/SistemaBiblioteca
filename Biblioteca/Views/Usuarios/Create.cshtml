            <div class="form-group">
                <label  class="control-label">Assinatura Atual:</label>
                <select asp-for="AssinaturaAtualId" class ="form-control" asp-items="ViewBag.AssinaturaAtualId"></select>
            </div> *@
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
