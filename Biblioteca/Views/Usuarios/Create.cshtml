@model Biblioteca.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/_FormStyles.css" />
<h2 class="text-3xl font-bold text-gray-800 mb-6"> Adicionar Usuario</h2>
<hr />
<div class="form-container">
    <div class="col-md-4">
        <form asp-action="Create">
