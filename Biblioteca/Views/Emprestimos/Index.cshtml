@model IEnumerable<Biblioteca.Models.Emprestimo>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/_ListStyle.css" />
<h1>Empréstimo</h1>

<p>
    <a asp-action="Create">Realizar novo Empréstimo</a>
</p>
<div>
    <table class="data-table">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Exemplar)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FuncionarioResponsavel)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DataEmprestimo)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Devolvido)
                </th>
                <th scope ="col">
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Exemplar.LivroId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FuncionarioResponsavel.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataEmprestimo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Devolvido)
                    </td>
                    <td class="text-right">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="action-link edit">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="action-link details">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="action-link delete">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
